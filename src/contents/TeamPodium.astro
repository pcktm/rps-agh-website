---
import members from "../contents/team";
import Avatar from "../components/Avatar.astro";
---

<div class="mt-6 flex flex-col gap-4 md:gap-y-5 overflow-hidden rounded-lg xl:w-11/12 mx-auto">
  <div class="flex md:justify-center">
    <div class="flex-1 border-brand-700 rounded-lg border py-2 px-3">
      <Avatar member={members[0]} />
    </div>
  </div>
  <div
    class="flex gap-4 md:gap-x-6 flex-col md:flex-row md:justify-center"
  >
    {
      members.slice(1).map((member, index) => (
        <div class="flex-1 border rounded-lg border-brand-700 py-2 px-3">
          <Avatar member={member} />
        </div>
      ))
    }
  </div>
  <div class="flex flex-row justify-end text-brand-600 hover:text-brand-800">
    <a class="flex flex-row items-center gap-2 text-sm" href="/prawa-i-rownosc#prawa">
      O nas
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
      </svg>
    </a>
  </div>
</div>


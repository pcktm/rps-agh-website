---
import { TeamMember } from '../contents/team';

export interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
---

<div class="flex flex-col flex-1 p-5 rounded-lg shadow-inner bg-gray-50 border-brand-200 border">
  <div class="flex flex-1">
    <div class="flex flex-col align-center">
      <img src={member.src} class="w-28 h-28 sm:w-32 sm:h-32 rounded-full" alt={member.name} />
      <div class="mt-3 text-xl font-bold font-sen underline decoration-brand-400 decoration-2">{member.name}</div>
      <div class="text-md text-gray-700">{member.role}</div>
    </div>
  </div>
  <p class="mt-2 flex-1">{member.description}</p>
  <a href={`mailto:${member.email}`} class="text-brand-700 text-sm mt-2 self-end">
    {member.email}
  </a>
</div>
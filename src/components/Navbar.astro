---
const currentPath = Astro.url.pathname;

const links: { path: string; title: string; isExternal?: boolean }[] = [
  { path: "/", title: "Strona główna" },
  { path: "/prawa-i-rownosc/", title: "Prawa i Równość w AGH" },
  { path: "/baza-wiedzy/", title: "Baza wiedzy" },
  {
    path: "https://www.facebook.com/rps.agh",
    title: "Facebook",
    isExternal: true,
  },
];
---

<nav
  class="mx-auto bg-white border-brand-300 shadow-inner px-5 py-4 rounded-b-lg w-full h-full flex flex-col sm:flex-row justify-center align-center"
>
  {
    links.map((link) => (
      <div class="mx-1 p-2">
        <a
          href={link.path}
          target={link.isExternal ? "_blank" : "_self"}
          class={`decoration-brand-400 decoration-2 ${
            currentPath === link.path ? "underline" : "hover:underline"
          } ${link.isExternal ? "flex flex-row items-center gap-1" : ""}`}
        >
          {link.title}
          {link.isExternal && (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4"
          >
            <path
              fill-rule="evenodd"
              d="M4.25 5.5a.75.75 0 00-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 00.75-.75v-4a.75.75 0 011.5 0v4A2.25 2.25 0 0112.75 17h-8.5A2.25 2.25 0 012 14.75v-8.5A2.25 2.25 0 014.25 4h5a.75.75 0 010 1.5h-5z"
              clip-rule="evenodd"
            />
            <path
              fill-rule="evenodd"
              d="M6.194 12.753a.75.75 0 001.06.053L16.5 4.44v2.81a.75.75 0 001.5 0v-4.5a.75.75 0 00-.75-.75h-4.5a.75.75 0 000 1.5h2.553l-9.056 8.194a.75.75 0 00-.053 1.06z"
              clip-rule="evenodd"
            />
          </svg>
        )}
        </a>
        
      </div>
    ))
  }
</nav>

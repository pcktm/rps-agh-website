---
import { TeamMember } from '../contents/team';

export interface Props {
  member: TeamMember;
}

const { member } = Astro.props;
---

<div class="flex items-center gap-4 md:gap-2 flex-row md:flex-col md:justify-center relative rounded-lg py-2">
  <img class="w-24 h-24 rounded-full object-cover object-center" src={member.src} alt={member.name} />
  <div class="flex flex-col md:items-center md:text-center">
    <div class="text-lg font-semibold text-slate-800">{member.name}</div>
    <div class="text-sm text-slate-600">{member.role}</div>
  </div>
</div>

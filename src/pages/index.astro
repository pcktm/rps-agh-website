---
import Layout from "../layouts/Layout.astro";
import About from "../contents/About.astro";
import Contact from "../contents/Contact.astro";
import ContactForm from "../contents/ContactForm";
import TitledSection from "../components/TitledSection.astro";
import Gallery from "../components/Gallery.astro";
import TeamPodium from "../contents/TeamPodium.astro";
---

<Layout title="Rzecznik Praw Studenta AGH">
	<Gallery />
	<main class="mx-auto bg-white p-4 sm:px-6 sm:py-5 rounded-lg sm:shadow mt-0 sm:mt-3 container overflow-hidden border-brand-300">
		<div class="md:mt-3">
			<About />
		</div>
		<div class="mt-5">
			<TitledSection title="Zespół Rzecznika Praw Studenta AGH">
				<TeamPodium />
				<div class="flex flex-row justify-end mt-3 text-brand-600 hover:text-brand-800">
					<a class="flex flex-row items-center gap-2 text-sm" href="/prawa-i-rownosc#prawa">
						O nas
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
							<path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd" />
						</svg>
					</a>
				</div>
			</TitledSection>
		</div>
		<div class="mt-8">
			<TitledSection title="Skontaktuj się z Rzecznikiem">
				<ContactForm client:idle />
			</TitledSection>
		</div>
		<div class="mt-5">
			<Contact />
		</div>
	</main>
</Layout>

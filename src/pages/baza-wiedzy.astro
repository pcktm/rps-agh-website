---
import TitledSection from "../components/TitledSection.astro";
import Layout from "../layouts/Layout.astro";

const links: {url: string, title: string}[] = [
  {
    url: "https://agh.edu.pl",
    title: "Strona główna AGH",
  },
  {
    url: "https://www.facebook.com/agh.edu.pl",
    title: "Facebook AGH",
  }
]
---

<Layout title="Baza wiedzy - Rzecznik Praw Studenta">
  <main class="mx-auto bg-white p-4 sm:px-6 sm:py-5 rounded-lg sm:shadow mt-2 sm:mt-3 container overflow-hidden">
    <TitledSection title="Baza wiedzy">
      <p>
        W tym miejscu... opis bazy wiedzy...
      </p>
      <ul class="mt-3 list-inside list-disc">
        {
          links.map((link) => (
            <li>
              <a href={link.url} target="_blank" class="hover:underline text-brand-500 hover:text-brand-700">{link.title}</a>
            </li>
          ))
        }
      </ul>
    </TitledSection>
  </main>
</Layout>
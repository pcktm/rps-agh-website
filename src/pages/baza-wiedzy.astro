---
import TitledSection from "../components/TitledSection.astro";
import Layout from "../layouts/Layout.astro";

const links: { url: string; title: string }[] = [
  {
    url: "https://www.cok.agh.edu.pl/fileadmin/_migrated/COK/DOS/pliki/akty_prawne/RS_AGH/2022_reg._stud._27_04_2022_46_-tj..pdf",
    title:
      "Regulamin Studiów Wyższych AGH – tekst jednolity obowiązujący od 1.10.2022r.",
  },
  {
    url: "https://isap.sejm.gov.pl/isap.nsf/DocDetails.xsp?id=WDU20220000574",
    title:
      "Ustawa z dnia 20 lipca 2018 r. – Prawo o szkolnictwie wyższym i nauce – tekst ujednolicony",
  },
  {
    title: "Statut AGH",
    url: "https://www.agh.edu.pl/home/ckim/dokumenty/akty_prawne/Statut_AGH_zalacznik_do_uchwaly_Senatu_90_2021.pdf",
  },
  {
    title: "Akademicki Kodeks Etyczny",
    url: "https://www.agh.edu.pl/o-agh/dokumenty/inne/kodeks-etyczny-agh",
  },
  {
    title:
      "Regulamin świadczeń dla studentów AGH – obowiązujący od 1.10.2022r.",
    url: "https://www.dss.agh.edu.pl/fileadmin/default/templates/css/j/dss/system/2022/Regulamin_swiadczen_22_23/Zarzadzenie_59_22_zalacznik_nr_1-1.pdf",
  },
  {
    title:
      "Portal Prawa Studenta prowadzony przez Parlament Studentów Rzeczypospolitej Polskiej",
    url: "https://prawastudenta.edu.pl",
  },
];
---

<Layout title="Baza wiedzy - Rzecznik Praw Studenta">
  <main
    class="mx-auto bg-white p-4 sm:px-6 sm:py-5 rounded-lg sm:shadow mt-2 sm:mt-3 container overflow-hidden"
  >
    <TitledSection title="Baza wiedzy">
      <p>
        Podstawy prawne (zawierają najwięcej przydatnych informacji) tworzą:
      </p>
      <ul class="mt-2 list-inside list-disc">
        {
          links.map((link) => (
            <li>
              <a
                href={link.url}
                target="_blank"
                class="hover:underline text-brand-500 hover:text-brand-700"
              >
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
      <p class="mt-4">
        Źródła istotnych informacji dla studentów i pracowników:
      </p>
      <ul class="mt-2 list-inside list-disc">
        <li>
          <a
            href="https://www.dss.agh.edu.pl"
            target="_blank"
            class="hover:underline text-brand-500 hover:text-brand-700"
          >
            Dział Spraw Studenckich AGH
          </a>
        </li>
        <li>
          <a
            href="https://www.cok.agh.edu.pl"
            target="_blank"
            class="hover:underline text-brand-500 hover:text-brand-700"
          >
            Centrum Organizacji Kształcenia AGH
          </a>
        </li>
      </ul>
    </TitledSection>
  </main>
</Layout>
